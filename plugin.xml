<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    id="de.hsheilbronn.cordova.sybaseplugin"
    version="0.0.1">

    <name>Sybase</name>

    <description>Connects Web-Apps with Sybase SQL Anywhere UltraLite database for Android.</description>

    <license>MIT</license>

    <engines>
        <engine name="cordova" version=">=3.0.0" />
    </engines>    

    <asset src="www/sybase.js" target="js/sybase.js" />

	<!-- android -->
	<platform name="android">
		<config-file target="res/xml/config.xml" parent="/*">
			<feature name="Sybase">
				<param name="android-package" value="de.hsheilbronn.sybaseplugin.Sybase" />
			</feature>
		</config-file>

		<config-file target="AndroidManifest.xml" parent="/manifest">
			<uses-permission android:name="android.permission.INTERNET" />
			<uses-permission android:name="android.permission.INTERACT_ACROSS_USERS_FULL" />
		</config-file>

		<source-file src="src/android/de/hsheilbronn/cordova/sybaseplugin/Sybase.java" target-dir="src/de/hsheilbronn/cordova/sybaseplugin"/>
        <source-file src="src/android/UltraLiteJNI16.jar" target-dir="libs"/>
	</platform>
</plugin>